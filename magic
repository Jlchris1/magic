-- Scripts:

local function GZUKR_fake_script() -- stoploops.Script 
	local script = Instance.new('Script', stoploops)

	function Click(mouse)
	
		_G.toggle = false
	
	end
	
	
	script.Parent.MouseButton1Down:connect(Click)
end
coroutine.wrap(GZUKR_fake_script)()
